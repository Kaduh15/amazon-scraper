{
  "name": "api",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "bun build src/server.ts --outdir dist --target node",
    "start": "bun run build && bun run dist/server.ts",
    "dev": "bun --watch src/server.ts"
  },
  "private": true,
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/bun": "latest",
    "lint-staged": "^16.1.5",
    "ultracite": "5.1.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bunx ultracite format"
    ]
  }
}