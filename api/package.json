{
  "name": "api",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "bun build src/server.ts --outdir dist --target node",
    "start": "bun run build && bun run dist/server.ts",
    "dev": "bun --watch src/server.ts"
  },
  "private": true,
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsdom": "^21.1.7",
    "lint-staged": "^16.1.5",
    "ultracite": "5.1.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bunx ultracite format"
    ]
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "express": "^4",
    "express-async-errors": "^3.1.1",
    "jsdom": "^26.1.0",
    "zod": "^4.0.17"
